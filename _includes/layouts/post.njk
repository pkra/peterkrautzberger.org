---
layout: layouts/base.njk
templateClass: tmpl-post
---



<article class="post">
  <h1 class="post-title">{{ title | markdownify | safe }}</h1>
  <span class="post-date"><time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time></span>
  {{ content | safe }}
</article>

<aside class="related">
  <span> To leave a comment <a href="mailto:p.krautzberger@gmail.com?subject=Comment%20re%20{{ title | urlencode  }}">write me an email</a>.
  </span>
  <span> You can also <a href="/about/">contact me</a>.</span>
</aside>

{% if latex %}
    <script type="module" src="/public/walker.js"></script>
{% endif %}
{% if prism %}
  <link href="https://unpkg.com/prismjs@1.20.0/themes/prism.css" rel="stylesheet">
  <style>code[class*="language-"], pre[class*="language-"]{font-size: 0.9em}</style>
{% endif %}
