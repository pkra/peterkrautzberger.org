{% for post in postslist | reverse %}
  <div class="post">
    <h2 class="post-title">
    <a href="{{ post.url | url }}">{% if post.data.title %}{{ post.data.title | markdownify | safe }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    </h2>
    <span class="post-date"><time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></span>
    {% excerpt post %}
    <a href="{{ post.url | url }}" aria-label="read more"> â€¦ </a>
  </div>
{% endfor %}
